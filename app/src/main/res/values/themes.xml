<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Normal app theme -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- System bar overrides -->
        <item name="android:statusBarColor">@color/BluePrimary</item>
        <item name="android:navigationBarColor">@color/WhiteBackground</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.WeatherApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenBackground">@color/BluePrimary</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherApp</item>
    </style>

</resources>